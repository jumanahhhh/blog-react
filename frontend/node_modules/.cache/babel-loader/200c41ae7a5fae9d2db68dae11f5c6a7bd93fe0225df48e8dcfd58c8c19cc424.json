{"ast":null,"code":"// src/hooks/useIntersectionObserver.js\nimport{useEffect,useRef}from'react';const useIntersectionObserver=(callback,options)=>{const observer=useRef(null);useEffect(()=>{observer.current=new IntersectionObserver(callback,options);return()=>{observer.current.disconnect();};},[callback,options]);const observe=element=>{if(element){observer.current.observe(element);}};return observe;};export default useIntersectionObserver;","map":{"version":3,"names":["useEffect","useRef","useIntersectionObserver","callback","options","observer","current","IntersectionObserver","disconnect","observe","element"],"sources":["/Users/jumanahmaheen/ReactJS/blog/src/hooks/useIntersectionObserver.js"],"sourcesContent":["// src/hooks/useIntersectionObserver.js\nimport { useEffect, useRef } from 'react';\n\nconst useIntersectionObserver = (callback, options) => {\n  const observer = useRef(null);\n\n  useEffect(() => {\n    observer.current = new IntersectionObserver(callback, options);\n\n    return () => {\n      observer.current.disconnect();\n    };\n  }, [callback, options]);\n\n  const observe = (element) => {\n    if (element) {\n      observer.current.observe(element);\n    }\n  };\n\n  return observe;\n};\n\nexport default useIntersectionObserver;\n"],"mappings":"AAAA;AACA,OAASA,SAAS,CAAEC,MAAM,KAAQ,OAAO,CAEzC,KAAM,CAAAC,uBAAuB,CAAGA,CAACC,QAAQ,CAAEC,OAAO,GAAK,CACrD,KAAM,CAAAC,QAAQ,CAAGJ,MAAM,CAAC,IAAI,CAAC,CAE7BD,SAAS,CAAC,IAAM,CACdK,QAAQ,CAACC,OAAO,CAAG,GAAI,CAAAC,oBAAoB,CAACJ,QAAQ,CAAEC,OAAO,CAAC,CAE9D,MAAO,IAAM,CACXC,QAAQ,CAACC,OAAO,CAACE,UAAU,CAAC,CAAC,CAC/B,CAAC,CACH,CAAC,CAAE,CAACL,QAAQ,CAAEC,OAAO,CAAC,CAAC,CAEvB,KAAM,CAAAK,OAAO,CAAIC,OAAO,EAAK,CAC3B,GAAIA,OAAO,CAAE,CACXL,QAAQ,CAACC,OAAO,CAACG,OAAO,CAACC,OAAO,CAAC,CACnC,CACF,CAAC,CAED,MAAO,CAAAD,OAAO,CAChB,CAAC,CAED,cAAe,CAAAP,uBAAuB","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}